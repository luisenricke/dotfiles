{
  // #region vscode configuration
  // Theme
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.iconTheme": "material-icon-theme",
  "window.title": "${activeEditorShort} ${separator}  ${rootName}",
  "window.zoomLevel": 0.95,

  // Font
  "editor.fontFamily": "IBM Plex Mono Medium, Hasklig, Fira Code, Consolas",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,

  // Editor
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 200,
  "editor.renderWhitespace": "selection",
  "editor.cursorWidth": 3,

  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.maxColumn": 150,

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  "explorer.sortOrder": "type",

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onWindowChange",

  // Others
  "workbench.editor.highlightModifiedTabs": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnPaste": false,
  "workbench.settings.editor": "json",
  // #endregion

  // #region Folder & Files
  "files.associations": {
    "*.aliases": "shellscript",
    "*.doskey": "shellscript",
    "*.blade.php": "blade",
    "*.php": "php",
    "*.erb": "erb",
    "*.html.erb": "erb"
  },

  "files.exclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/.cache/**": true,
    "**/vendor/**": false,
    "**/artisan": true,
    "**/build/**": true,
    "**/.gradle/**": true,
    "**/.idea/**": true,
    "**/.dll": true,
    "**/.DS_Store": true
  },

  "files.watcherExclude": {
    "**/.vscode/**": true,
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/.cache/**": true,
    "**/vendor/**": true,
    "**/storage/**/*.php": true,
    "**/artisan": true,
    "**/composer.lock": true,
    "**/build/**": true,
    "**/libs/**": true,
    "**/.gradle/**": true,
    "**/.idea/**": true,
    "**/.DS_Store": true,
    "**/log/**": true,
    "**/logs/**": true,
    "**/*.log": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true
  },

  "search.exclude": {
    "**/.vscode/**": true,
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/.cache/**": true,
    "**/vendor/**": true,
    "**/storage/**/*.php": true,
    "**/artisan": true,
    "**/composer.lock": true,
    "**/build/**": true,
    "**/libs/**": true,
    "**/.gradle/**": true,
    "**/.idea/**": true,
    "**/.DS_Store": true,
    "**/log/**": true,
    "**/logs/**": true,
    "**/*.log": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true
  },
  // #endregion

  // #region Language
  "cSpell.language": "es,en",
  // #endregion

  // #region JSON
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // #endregion

  // #region Web
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // #endregion

  // #region PHP
  "[php]": {
    "editor.defaultFormatter": "kokororin.vscode-phpfmt"
  },

  "php.suggest.basic": false,
  "php.validate.enable": true,
  "php.validate.executablePath": "C:/tools/php/php-8.0.20-Win32-vs16-x64/php.exe",

  "intelephense.environment.phpVersion": "7.2.34",
  "intelephense.format.enable": false,
  "intelephense.format.braces": "psr12",

  "phpfmt.php_bin": "C:/tools/php/php-8.0.20-Win32-vs16-x64/php.exe",
  "php.debug.executablePath": "C:/tools/php/php-8.0.20-Win32-vs16-x64/php.exe",

  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "php-cs-fixer.lastDownload": 1656047836722,

  "[blade]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },

  "blade.format.enable": false,
  "bladeFormatter.format.enabled": true,
  // #endregion

  // #region Ruby
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.lint": {
    "rubocop": {
      "useBundler": true // enable rubocop via bundler
    },
    "reek": {
      "useBundler": true // enable reek via bundler
    }
  },
  "ruby.format": "rubocop", // use rubocop for formatting

  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  // #endregion

  // #region Noisy configuration
  "workbench.settings.enableNaturalLanguageSearch": false,
  "extensions.ignoreRecommendations": true,
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "git.ignoreMissingGitWarning": true,
  "explorer.openEditors.visible": 0,
  "window.restoreWindows": "none",
  // #endregion

  // #region Other plugins
  "auto-close-tag.SublimeText3Mode": true,

  "color-highlight.markerType": "underline",

  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.NoBrowser": true,

  "advancedNewFile.exclude": {
    ".git": true,
    "node_modules": true,
    "bower_components": true,
    ".cache": true,
    "vendor": true,
    "build": true,
    "libs": true,
    ".idea": true,
    ".vscode": true,
    "log": true,
    "logs": true
  },

  "todohighlight.exclude": [
    "**/.vscode/**",
    "**/.git/**",
    "**/node_modules/**",
    "**/bower_components",
    "**/.cache/**",
    "**/vendor/**",
    "**/storage/**/*.php",
    "**/artisan",
    "**/composer.lock",
    "**/build/**",
    "**/libs/**",
    "**/.gradle/**",
    "**/.idea/**",
    "**/.DS_Store",
    "**/log/**",
    "**/logs/**",
    "**/*.log",
    "**/.svn",
    "**/.hg",
    "**/CVS"
  ],

  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.blase.php",
    "**/*.css",
    "**/*.scss"
  ],

  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#000",
      "backgroundColor": "#FFCC5C",
      "isWholeLine": false,
      "overviewRulerColor": "#FFCC5C"
    },
    {
      "text": "FIXME",
      "color": "#000",
      "backgroundColor": "#FF6F69",
      "isWholeLine": false,
      "overviewRulerColor": "#FF6F69"
    },
    {
      "text": "CHECK",
      "color": "#000",
      "backgroundColor": "#acdeaa",
      "isWholeLine": false,
      "overviewRulerColor": "#acdeaa"
    }
  ]
  // #endregion
}
